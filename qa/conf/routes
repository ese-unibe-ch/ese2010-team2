# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Import Secure routes
*                /                              module:secure



# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
GET                /showQuestionForm                                Admin.showQuestionForm
GET                /addQuestion   		                            Admin.addQuestion
GET                /showRegister                                    Application.showRegister
GET                /question/{id}/answers/                          Application.showAnswers
GET                /showState                                       Application.showState
GET                /users                                           Admin.showUsers
GET                /register                                        Application.register
GET                /AccessDeniedForm                                Admin.AccessDeniedForm
GET                /question/{qid}/editQuestion                     Admin.editQuestion
GET                /question/{qid}/editAnswer/{answerId}            Admin.editAnswer
GET                /question/{qid}/setbestanswer/{aid}              Application.setBestAnswer
GET                /question/{qid}/addAnswer	                   	Admin.showAnswerForm
GET                /question/{qid}/edit_question                    Admin.showEditQuestionForm
GET                /question/{qid}/comment_question                 Admin.showQuestionCommentForm
GET                /question/{qid}/edit_answer/{answerId}           Admin.showEditAnswerForm
GET                /question/{qid}/comment_answer                   Admin.showAnswerCommentForm
GET                /question/{qid}/answer/addAnswer             	Admin.addAnswer
GET                /question/{qid}/addQuestionComment               Admin.addCommentToQuestion
GET                /question/{qid}/addAnswerComment/{answerId}      Admin.addCommentToAnswer
GET                /question/{qid}/edit_comment                     Admin.showEditCommentForm
GET                /question/{qid}/vote                        		Admin.voteQuestion
GET                /question/{qid}/vote/up                      	Admin.voteQuestionUp
GET                /question/{qid}/vote/down                   		Admin.voteQuestionDown
GET                /question/{qid}/answers/{aid}/vote               Admin.voteAnswer
GET                /question/{qid}/answer/{aid}/vote/up            Admin.voteAnswerUp
GET                /question/{qid}/answer/{aid}/vote/down          Admin.voteAnswer
GET			       /recent											Application.showRecentQuestionsByNumber
GET				   /users/{uname}/log								Admin.showUserLog
GET				   /editUserProfile									Application.editUserProfile
GET				   /showUserProfile									Application.showUserProfile
GET                /showUser                                        Application.showUser
GET				   /search											Application.search
GET				   /editUserGroup									Application.editUserGroup

POST				/setAvatar										Application.setAvatar