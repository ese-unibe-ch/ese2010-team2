# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Import Secure routes
*                /                              module:secure



# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
GET                /showQuestionForm                                Admin.showQuestionForm
GET                /showCommentForm                                 Admin.showCommentForm
GET                /addQuestion                                     Admin.addQuestion
GET                /addComment                                      Admin.addComment
GET                /showRegister                                    Application.showRegister
GET                /question/{id}/answers/                          Application.showAnswers
GET                /users                                           Admin.showUsers
GET                /register                                        Application.register
GET                /question/{qid}/setbestanswer/{aid}              Application.setBestAnswer
GET                /question/{qid}/addAnswer	                   	Admin.showAnswerForm
GET                /question/{qid}/answer/addAnswer             	Admin.addAnswer
GET                /question/{qid}/vote                        		Admin.voteQuestion
GET                /question/{qid}/answers/{aid}/vote               Admin.voteAnswer
GET			       /recent											Application.showRecentQuestionsByNumber
GET				   /users/{uname}/log								Admin.showUserLog
GET				   /editUserProfile									Application.editUserProfile
GET				   /showUserProfile									Application.showUserProfile